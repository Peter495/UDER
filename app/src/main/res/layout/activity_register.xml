<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uder.uder.Activities.RegisterActivity">

    <TextView
        android:text="Please fill out some basic info about yourself:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_register_welcome"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_register_welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:id="@+id/et_fname"
        android:hint="First Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/et_fname"
        android:layout_alignEnd="@+id/et_fname"
        android:layout_marginTop="15dp"
        android:id="@+id/et_lname"
        android:hint="Last Name" />

    <Button
        android:text="Sign Up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/rg_group"
        android:layout_alignEnd="@+id/tv_register_welcome"
        android:layout_alignStart="@+id/et_password"
        android:id="@+id/b_signup"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg_group"
        android:weightSum="1"
        android:layout_below="@+id/tv_choice"
        android:layout_alignStart="@+id/b_signup"
        android:layout_alignEnd="@+id/b_signup">

        <RadioButton
            android:text="Deliever Milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_getter"
            android:layout_alignBaseline="@+id/rb_user"
            android:layout_alignBottom="@+id/rb_user"
            android:layout_alignEnd="@+id/tv_register_welcome"
            android:layout_marginEnd="19dp" />

        <RadioButton
            android:text="Get Milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_user"
            android:layout_weight="1.42" />
    </RadioGroup>

    <TextView
        android:text="I want to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_choice"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="Password"
        android:layout_below="@+id/et_username"
        android:layout_alignStart="@+id/et_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/et_username"
        android:hint="Username"
        android:layout_below="@+id/et_lname"
        android:layout_alignStart="@+id/et_lname" />
</RelativeLayout>
