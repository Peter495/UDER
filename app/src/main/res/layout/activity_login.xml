<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uder.uder.Activities.LoginActivity"
    android:background="?android:attr/textColorLink">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:id="@+id/et_username"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_marginTop="31dp"
        android:id="@+id/et_password"
        android:hint="Password" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_login"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/et_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Click Here to register a new user"
        android:layout_width="wrap_content"
        android:id="@+id/tv_register"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/b_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_welcome"
        android:text="Welcome to UDER, please enter your username and password below to get started!"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:padding="13dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/tv_register"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="7dp"
            android:layout_alignEnd="@+id/tv_register"
            android:layout_weight="1"
            android:src="@mipmap/carflat"
            android:id="@+id/driver_button"
            android:background="#00ffffff" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="7dp"
            android:background="#00ffffff"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/tv_register"
            android:layout_weight="0.95"
            android:src="@mipmap/uder_launcher"
            android:id="@+id/user_button" />
    </LinearLayout>

</RelativeLayout>
